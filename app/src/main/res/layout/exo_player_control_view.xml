<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Controls Bar -->
    <LinearLayout
        android:id="@+id/topControlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/exo_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/text_primary"
            android:contentDescription="Back" />

        <!-- Video Title -->
        <TextView
            android:id="@+id/exo_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Audio Track Button -->
        <ImageButton
            android:id="@+id/exo_audio_track"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_audio_track"
            app:tint="@color/text_primary"
            android:contentDescription="Audio Tracks" />

        <!-- Subtitle Button -->
        <ImageButton
            android:id="@+id/exo_subtitle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_subtitle"
            app:tint="@color/text_primary"
            android:contentDescription="Subtitles" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/exo_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            app:tint="@color/text_primary"
            android:contentDescription="Settings" />

    </LinearLayout>

    <!-- Center Controls -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Previous -->
        <ImageButton
            android:id="@+id/exo_prev"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/text_primary"
            android:contentDescription="Previous" />

        <!-- Rewind 10s -->
        <ImageButton
            android:id="@+id/exo_rew"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_replay_10"
            app:tint="@color/text_primary"
            android:contentDescription="Rewind 10 seconds" />

        <!-- Play / Pause -->
        <ImageButton
            android:id="@+id/exo_play_pause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_play_button"
            android:src="@drawable/ic_play"
            app:tint="@color/text_primary"
            android:contentDescription="Play/Pause" />

        <!-- Forward 10s -->
        <ImageButton
            android:id="@+id/exo_ffwd"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_forward_10"
            app:tint="@color/text_primary"
            android:contentDescription="Forward 10 seconds" />

        <!-- Next -->
        <ImageButton
            android:id="@+id/exo_next"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            app:tint="@color/text_primary"
            android:contentDescription="Next" />

    </LinearLayout>

    <!-- Bottom Controls Bar -->
    <LinearLayout
        android:id="@+id/bottomControlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradient_bottom"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <!-- Time Bar Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Current Time -->
            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:fontFamily="monospace" />

            <!-- Seek Bar -->
            <androidx.media3.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                app:played_color="@color/primary"
                app:buffered_color="@color/seekbar_buffered"
                app:unplayed_color="@color/seekbar_background"
                app:scrubber_color="@color/primary"
                app:scrubber_enabled_size="16dp"
                app:scrubber_disabled_size="0dp"
                app:bar_height="4dp" />

            <!-- Duration -->
            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Bottom Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Playback Speed Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exo_speed"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1x"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                app:icon="@drawable/ic_speed"
                app:iconTint="@color/text_primary"
                app:iconSize="18dp"
                app:backgroundTint="@android:color/transparent" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Aspect Ratio Button -->
            <ImageButton
                android:id="@+id/exo_aspect_ratio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_aspect_ratio"
                app:tint="@color/text_primary"
                android:contentDescription="Aspect Ratio" />

            <!-- Rotate Button -->
            <ImageButton
                android:id="@+id/exo_rotate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_rotate"
                app:tint="@color/text_primary"
                android:contentDescription="Rotate" />

            <!-- Fullscreen Button -->
            <ImageButton
                android:id="@+id/exo_fullscreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_fullscreen"
                app:tint="@color/text_primary"
                android:contentDescription="Fullscreen" />

        </LinearLayout>

    </LinearLayout>

</merge>
